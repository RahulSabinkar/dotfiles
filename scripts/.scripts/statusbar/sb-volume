#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer --allow-boost -i 1 ;;
	5) pamixer --allow-boost -d 1 ;;
	3) notify-send "ï‚¡ Volume module" "\- Shows volume ðŸ”Š, ï‡¶ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Arbitrary but unique message tag
msgTag="statusVolume"

# [ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit
[ $(pamixer --get-mute) = true ] && echo "ï‡¶" &&
    # Show the sound muted notification
    dunstify -a "changeVolume" -u low -i audio-volume-muted -h string:x-dunst-stack-tag:$msgTag "Volume muted" &&
    exit

vol="$(pamixer --get-volume)"

# if [ "$vol" -gt "70" ]; then
# 	icon="ðŸ”Š"
# elif [ "$vol" -lt "30" ]; then
# 	icon="ðŸ”ˆ"
# else
# 	icon="ðŸ”‰"
# fi

if [ "$vol" -gt "50" ]; then
	icon="ï€¨"
    # Show the volume notification
    dunstify -a "changeVolume" -u low -i audio-volume-high -h string:x-dunst-stack-tag:$msgTag \
    -h int:value:"$vol" "Volume: ${vol}%"
# elif [ "$vol" -lt "30" ]; then
# 	icon="ï©¿ "
elif [ "$vol" -eq "0" ]; then
    icon="ïš©"
    # Show the sound muted notification
    dunstify -a "changeVolume" -u low -i audio-volume-muted -h string:x-dunst-stack-tag:$msgTag "Volume muted"
else
	icon="ï€§"
    # Show the volume notification
    dunstify -a "changeVolume" -u low -i audio-volume-medium -h string:x-dunst-stack-tag:$msgTag \
    -h int:value:"$vol" "Volume: ${vol}%"
fi

echo "$icon $vol%"
